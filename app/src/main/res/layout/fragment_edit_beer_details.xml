<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextBrewery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brewery"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextBrewery"
            android:layout_marginTop="16dp"
            android:hint="Beer Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextName"
            android:layout_marginTop="16dp"
            android:hint="Style"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextABV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextStyle"
            android:layout_marginTop="16dp"
            android:hint="ABV"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextABV"
            android:layout_marginTop="16dp"
            android:hint="Volume"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextPictureUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextVolume"
            android:layout_marginTop="16dp"
            android:hint="Picture URL"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextHowMany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPictureUrl"
            android:layout_marginTop="16dp"
            android:hint="How Many"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:singleLine="true" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextHowMany"
            android:layout_marginTop="16dp"
            android:text="Save" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
